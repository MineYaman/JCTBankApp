@model JCTBank.Entity.Account

@{
    ViewBag.Title = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">

                <h3>Do you want to create a new account?</h3>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CustomerId)

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Open Account" class="btn btn-info btn-lg btn-block" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

<div>
    @Html.ActionLink("Return Account List", "ListAccount")
</div>
