@model IEnumerable<JCTBank.Entity.Account>

@{
    ViewBag.Title = "ListAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>List Account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                </header>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.AccountNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AdditionalAccountNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Balance)
                            </th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdditionalAccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>
                                <td>
                                    <a href="/Account/WithdrawMoney/@item.Id" class="btn btn-primary btn-xs ">Withdraw money</a>
                                </td>
                                <td>
                                    <a href="/Account/DepositMoney/@item.Id" class="btn btn-primary btn-xs ">Deposit money</a>
                                </td>
                                <td>
                                    <a href="/Account/DeleteAccount/@item.Id" class="btn btn-primary btn-xs ">Close Account</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </section>
        </div>
    </div>
}