
@model JCTBank.Entity.Account

@{
    ViewBag.Title = "DepositMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">

            <h4>List Account</h4>
        </header>
        <div class="panel-body">
            @using (Html.BeginForm("DepositMoney", "Account", FormMethod.Post, new { @id = "frmDepositMoney" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Deposit Money</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.AccountNo, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.AccountNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.AdditionalAccountNo, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.AdditionalAccountNo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AdditionalAccountNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Balance, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control", id = "balance", maxlength = "10" } })
                            @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Deposit Money" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
            <div>
                @Html.ActionLink("Return Account List", "ListAccount")
            </div>

        </div>
    </section>
</div>
<br />

<script>
    $(document).ready(function () {
        $("#balance").keypress(function (evt) {
            var charCode = (evt.which) ? evt.which : event.keyCode
            if (charCode == 44 || charCode >= 48 && charCode <= 57) {
                return true;
            }
            return false;

        });

    });

</script>